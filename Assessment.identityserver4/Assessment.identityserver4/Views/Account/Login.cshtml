@model IdentityServerAspNetIdentity.Quickstart.Account.LoginViewModel


    <partial name="_ValidationSummary" />
    <br />
    <div class="row">
        <div class="col-md-4"></div>
        @if (Model.EnableLocalLogin)
        {
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                            <h3>Login</h3>
                        </div>

                        <div class="text-center text-muted">Sign in with credentials</div>

                        <form asp-route="Login">
                            <input type="hidden" asp-for="ReturnUrl" />

                            <fieldset>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                                </div>
                        
                                <div class="form-group">
                                    <button class="btn btn-primary btn-block" name="button" value="login">Sign In</button>
                                </div>

                            </fieldset>
                        </form>
                        <br />
                        
                    </div>
                </div>
            </div>
        }

        <div class="col-md-4"></div>
</div>